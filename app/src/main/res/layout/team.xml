<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Размеры баскетбольного кольца и щита"
            android:textColor="#000000"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="421dp"
            android:layout_height="228dp"
            app:srcCompat="@drawable/_614680431_33_p_fon_tkhekvondo_43" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:text="Высота баскетбольного кольца от уровня пола составляет 3,05 метра (стандарт). Диаметр кольца для баскетбола колеблется от 45 см до 45,7 см. Само кольцо должно быть выкрашено в ярко оранжевый цвет. К кольцу крепится специальная сетка диной 40-45 см. Баскетбольное кольцо расположено на расстоянии 15 см от щита."
            android:textColor="#000000" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>